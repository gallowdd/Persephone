            </xsd:element>
            <xsd:element name="random_generation" minOccurs="1" maxOccurs="1" type="distributionXmlType" />
          </xsd:choice>
        </xsd:complexType>
      </xsd:element>
      <xsd:element name="elevation" minOccurs="0" maxOccurs="1">
